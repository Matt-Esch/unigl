{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Debug build",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/D_UNICODE",
				"/DUNICODE",
				"/DWIN32",
				"/D_WINDOWS",
				"/I${workspaceFolder}\\include\\",
				"/Fe:",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Prod build",
			"command": "cl.exe",
			"args": [
				"/EHsc",
				"/D_UNICODE",
				"/DUNICODE",
				"/DWIN32",
				"/D_WINDOWS",
				"/I${workspaceFolder}\\include\\",
				"/Fe:",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}